<Window x:Class="IEditableObjectTest.Views.EditPersonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IEditableObjectTest.Views"
        mc:Ignorable="d"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Title="PersonView"
        Height="166"
        Width="259">
  <Grid>
    <StackPanel>
      <TextBox Text="{Binding Person.Name, UpdateSourceTrigger=PropertyChanged}"
               Margin="5" />
      <TextBox Text="{Binding Person.Age, UpdateSourceTrigger=PropertyChanged}"
               Margin="5" />

      <UniformGrid Rows="1">
        <Button x:Name="OkButton"
                Content="OK"
                Command="{Binding OkCommand}"
                Click="OkButton_Click"
                Margin="5"
                IsDefault="True" />
        <Button x:Name="CancelButton"
                Content="Cancel"
                Command="{Binding CancelCommand}"
                Click="CancelButton_Click"
                Margin="5"
                IsCancel="True" />
      </UniformGrid>
    </StackPanel>
  </Grid>
</Window>
